<% layout('layouts/boilerplate') %>
<div class="my-5">
    <h1>All Products</h1>
    <form action="/products/filter" method="GET">
        <div class="mb-3">
            <label for="price-filter">Filter by Price:</label>
            <input type="number" name="price-filter" id="price-filter" placeholder="10000"></input>
        </div>
        <div class="mb-3">
            <label for="rating-filter">Filter by Rating:</label>
            <input type="number" name="rating-filter" id="rating-filter" placeholder="5" max="5" min="0"></input>
        </div>
        <button type="submit" class="btn btn-primary d-block btn-sm mb-3">Apply Filters</button>
    </form>
    
    <ul>
        <% for(let product of products){ %>
            <li><a href="/products/<%= product._id %>"><%= product.name %></a></li>
        <% } %>
    </ul>
    
    <a href="/products/new" class="btn btn-success btn-sm">Add Product</a>
    <a href="/products/featured" class="btn btn-success btn-sm">Show Featured Products</a>
</div>
